<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:gfe="http://www.springframework.org/schema/gemfire"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/gemfire http://www.springframework.org/schema/gemfire/spring-gemfire.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <gfe:pool id="gemfirePool" subscription-enabled="true">
        <gfe:locator host="localhost" port="10334"/>
    </gfe:pool>

    <gfe:client-cache pool-name="gemfirePool" pdx-serializer-ref="pdxSerializer" />

    <bean name="pdxSerializer" class="com.gemstone.gemfire.pdx.ReflectionBasedAutoSerializer" c:patterns="com.eitan.Contact" />

    <gfe:client-region id="ContactsRegion" pool-name="gemfirePool" shortcut="PROXY" />

</beans>

